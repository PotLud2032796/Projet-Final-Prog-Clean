@model Atelier.Models.VetementTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Vetements" asp-action="Index" method="get">
    <p>

        <select asp-for="VetementType" asp-items="Model.Type">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vetements[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vetements[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vetements[0].DateObtention)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vetements[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vetements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateObtention)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VetementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VetementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VetementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
